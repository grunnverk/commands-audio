{
  "name": "@grunnverk/commands-audio",
  "version": "1.5.4-dev.0",
  "description": "Audio transcription and voice commands for kodrdriv (transcribe, voice-note)",
  "main": "dist/index.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "guide"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grunnverk/commands-audio.git"
  },
  "scripts": {
    "build": "npm run lint && tsc --noEmit && vite build",
    "dev": "vite",
    "watch": "vite build --watch",
    "test": "rm -rf coverage && vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "clean": "rm -rf dist",
    "precommit": "npm run lint && npm run build && npm run test",
    "prepublishOnly": "npm run clean && npm run lint && npm run build && npm run test"
  },
  "keywords": [
    "kodrdriv",
    "audio",
    "transcription",
    "voice",
    "commands"
  ],
  "author": "Tim O'Brien <tobrien@discursive.com>",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=24.0.0"
  },
  "dependencies": {
    "@grunnverk/ai-service": "^1.5.3",
    "@grunnverk/audio-tools": "^1.5.4",
    "@grunnverk/commands-git": "^1.5.6",
    "@grunnverk/core": "^1.5.6",
    "@grunnverk/git-tools": "^1.5.4",
    "@grunnverk/github-tools": "^1.5.4",
    "@grunnverk/shared": "^1.5.4",
    "@riotprompt/riotprompt": "^0.0.21",
    "@theunwalked/unplayable": "^0.0.28",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.33.0",
    "@swc/core": "^1.13.3",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "ajv": "^8.17.1",
    "esbuild": "0.27.2",
    "eslint": "^9.33.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.3.0",
    "mockdate": "^3.0.5",
    "rollup": "^4.30.1",
    "typescript": "^5.9.2",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.3.0",
    "vite-plugin-node": "^7.0.0",
    "vitest": "^4.0.13"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.30.1",
    "@swc/core-linux-x64-gnu": "^1.13.3"
  }
}
